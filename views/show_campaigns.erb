<%= erb :header %>


<!-- WEBSITE ARTICLES -->
<div id="maincontent">
  <article id="form">
    <% if @camps.length == 0 then %>
        <p>No campaigns found!</p>
    <% else %>
      <table>
        <tr>
          <th>Delete Campaign?</th>
          <th><a href="/show_campaigns?order=name">Name</a></th>
          <th><a href="/show_campaigns?order=desc">Description</a></th>
          <th><a href="/show_campaigns?order=keyword">Keyword (hashtag)</a></th>
        </tr>
        <% @camps.each do |campaign| %>
            <tr>
              <!-- Fix this shit -->
              <td><img src="/images/delete.png" height="25" width="25" onclick="function(){
                                                                                          $('camp').val('<%= campaign[3] %>');
                                                                                          $('delete_form').submit();
                                                                                          }"/></td>
              <td><%=h campaign[0]%></td>
              <td><%=h campaign[1]%></td>
              <td><%=h campaign[2]%></td>
            </tr>
        <% end %>
      </table>
        <form id="delete_form" action="/show_campaigns" method="post" >
          <input id="camp" type="hidden" value="" name="id" />
        </form>
    <% end %>

  </article>
</div>


<%= erb :footer %>
