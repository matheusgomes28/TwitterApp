<%= erb :header %>


<!-- WEBSITE ARTICLES -->
<div id="maincontent">
  <article id="form">
    <% if @camps.length == 0 then %>
        <p>No campaigns found!</p>
    <% else %>
      <table>
        <tr>
          <th><a href="/show_campaigns?order=name">Name</a></th>
          <th><a href="/show_campaigns?order=desc">Description</a></th>
          <th><a href="/show_campaigns?order=keyword">Keyword (hashtag)</a></th>
        </tr>
        <% @camps.each do |campaign| %>
            <tr>
              <td><%=h campaign[0]%></td>
              <td><%=h campaign[1]%></td>
              <td><%=h campaign[2]%></td>
            </tr>
        <% end %>
      </table>
    <% end %>

  </article>
</div>


<%= erb :footer %>
